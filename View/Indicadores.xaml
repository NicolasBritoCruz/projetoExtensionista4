<ContentPage
    x:Class="Extensionista.View.Indicadores"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Indicadores">

    <AbsoluteLayout BackgroundColor="#ffffff">

        <!--  Imagem do ícone  -->
        <Image
            AbsoluteLayout.LayoutBounds="0.09, 0.03, 0.1, 0.1"
            AbsoluteLayout.LayoutFlags="All"
            Source="appiconfg1.png" />
        <Image
            AbsoluteLayout.LayoutBounds="0.5, 0.65, 1, 0.8"
            AbsoluteLayout.LayoutFlags="All"
            Source="mapa.png" />

        <!--  Título  -->
        <Label
            AbsoluteLayout.LayoutBounds="0.5, 0.065"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontFamily="MontserratSemiBold"
            FontSize="22"
            Text="Indicadores"
            TextColor="#092444" />
        <Label
            AbsoluteLayout.LayoutBounds="0.5, 0.13"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontFamily="MontserratSemiBold"
            FontSize="20"
            HorizontalOptions="Center"
            Text="SELECIONE UMA REGIÃO"
            TextColor="#092444"
            VerticalOptions="Center" />
        <Button
            Padding="10,0"
            AbsoluteLayout.LayoutBounds="0.35, 0.42, 0.2, 0.1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Transparent"
            Clicked="OnRegiaoClicked"
            CornerRadius="40"
            FontAttributes="Bold"
            FontFamily="MontserratSemiBold"
            FontSize="15"
            Text="Norte"
            TextColor="#ffffff"
            VerticalOptions="Fill" />
        <Button
            Padding="10,0"
            AbsoluteLayout.LayoutBounds="0.89, 0.47, 0.25, 0.07"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="transparent"
            Clicked="OnRegiaoClicked"
            CornerRadius="40"
            FontAttributes="Bold"
            FontFamily="MontserratSemiBold"
            FontSize="15"
            Text="Nordeste"
            TextColor="#ffffff"
            VerticalOptions="Fill" />
        <Button
            Padding="10,0"
            AbsoluteLayout.LayoutBounds="0.519, 0.564, 0.3, 0.07"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Transparent"
            Clicked="OnRegiaoClicked"
            CornerRadius="40"
            FontAttributes="Bold"
            FontFamily="MontserratSemiBold"
            FontSize="14"
            Text="Centro-Oeste"
            TextColor="#ffffff"
            VerticalOptions="Fill" />
        <Button
            Padding="10,0"
            AbsoluteLayout.LayoutBounds="0.72, 0.62, 0.2, 0.06"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Transparent"
            Clicked="OnRegiaoClicked"
            CornerRadius="40"
            FontAttributes="Bold"
            FontFamily="MontserratSemiBold"
            FontSize="15"
            Text="Sudeste"
            TextColor="#ffffff"
            VerticalOptions="Fill" />
        <Button
            Padding="10,0"
            AbsoluteLayout.LayoutBounds="0.55, 0.71, 0.2, 0.06"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="transparent"
            Clicked="OnRegiaoClicked"
            CornerRadius="40"
            FontAttributes="Bold"
            FontFamily="MontserratSemiBold"
            FontSize="15"
            Text="Sul"
            TextColor="#ffffff"
            VerticalOptions="Fill" />

    </AbsoluteLayout>
</ContentPage>
