<ContentPage
    x:Class="Extensionista.PaginaPesquisa"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Pesquisa"
    IconImageSource="pesquisa.png">

    <StackLayout Padding="10" BackgroundColor="#ffffff">

        <!--  Barra de Pesquisa com Ícone de Lupa à direita  -->
        <Frame
            Margin="0,10"
            Padding="10"
            BackgroundColor="#f0f0f5"
            CornerRadius="20"
            HasShadow="False">
            <Grid>
                <Entry
                    x:Name="entrySearch"
                    HorizontalOptions="FillAndExpand"
                    Placeholder="Digite a cidade ou nome da universidade"
                    TextColor="Black" />
                <ImageButton
                    Margin="0,0,5,0"
                    Clicked="Pesquisar_Clicked"
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="pesquisa.png"
                    WidthRequest="20" />
            </Grid>
        </Frame>

        <!--  Cabeçalho da tabela com borda  -->
        <Frame
            Padding="0"
            BorderColor="#092444"
            CornerRadius="0">
            <Grid
                Padding="10"
                BackgroundColor="#092444"
                ColumnDefinitions="*,*,*">
                <Label
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="NOME"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="CIDADE"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                <Label
                    Grid.Column="2"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    Text="UF"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Grid>
        </Frame>

        <!--  Lista de resultados  -->
        <CollectionView
            x:Name="ListaFaculdades"
            SelectionChanged="OnFaculdadeSelected"
            SelectionMode="Single"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="5"
                        Padding="10"
                        BackgroundColor="#d6eafa"
                        BorderColor="#092444"
                        CornerRadius="0">
                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">
                            <!--  NOME  -->
                            <Label
                                Grid.Column="0"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding NOME_IES}"
                                TextColor="#092444"
                                VerticalTextAlignment="Center" />
                            <!--  CIDADE  -->
                            <Label
                                Grid.Column="1"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding MUNICIPIO}"
                                TextColor="#092444"
                                VerticalTextAlignment="Center" />
                            <!--  UF  -->
                            <Label
                                Grid.Column="2"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Text="{Binding UF}"
                                TextColor="#092444"
                                VerticalTextAlignment="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>